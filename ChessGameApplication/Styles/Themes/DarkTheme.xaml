<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Кольори для темної теми -->
    <Color x:Key="PrimaryColor">#4e5b9d</Color>
    <Color x:Key="TextColor">White</Color>
    <Color x:Key="BackgroundColor">#2d2d44</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush">White</SolidColorBrush>

    <Style x:Key="TextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
    </Style>

    <!-- Кнопки темної теми -->
    <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="#1e1e2f"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
    </Style>

    <!-- Стиль для радіо кнопок світлої теми -->
    <Style x:Key="RadioButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource BaseRadioButtonStyle}">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
    </Style>

    <!-- Стиль для сітки темної теми -->
    <LinearGradientBrush x:Key="GridBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1e1e2f" Offset="0"/>
        <GradientStop Color="#2d2d44" Offset="1"/>
    </LinearGradientBrush>

    <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource BaseComboBoxStyle}">
        <Setter Property="Background" Value="#d2d2bb"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

</ResourceDictionary>