<Window x:Class="ChessGameApplication.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGameApplication"
        mc:Ignorable="d"
        Title="Налаштування"
        Width="600" Height="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="20">
            <TextBlock Text="Налаштування" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource ForegroundBrush}"
                       HorizontalAlignment="Center"/>

            <Button Content="Перемкнути тему" 
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ToggleTheme_Click"/>

            <Button Content="Перемкнути режим вікна" 
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ToggleWindowMode_Click"/>

            <Button Content="Повернутися до меню"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="BackToMenu_Click"/>
        </StackPanel>
    </Grid>
</Window>
