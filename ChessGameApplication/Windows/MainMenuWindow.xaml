<Window x:Class="ChessGameApplication.Windows.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGameApplication.Windows"
        mc:Ignorable="d"
        Title="Шахи"
        WindowStartupLocation="CenterScreen"
        Width="1280" Height="720"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="CanResizeWithGrip">
    <Grid Background="{StaticResource GridBackgroundBrush}">

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300"
                    Margin="0,20">

            <TextBlock Text="♔ Шахи ♚"
                       FontSize="48"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       Style="{DynamicResource TextBlockStyle}"/>

            <Button Content="Нова гра"
                    Style="{StaticResource ButtonStyle}"
                    Click="NewGame_Click"
                    Margin="0,0,0,15"/>

            <Button Content="Продовжити гру"
                    Style="{StaticResource ButtonStyle}"
                    Click="ContinueGame_Click"
                    Margin="0,0,0,15"/>

            <Button Content="Налаштування"
                    Style="{StaticResource ButtonStyle}"
                    Click="Settings_Click"
                    Margin="0,0,0,15"/>

            <Button Content="Вихід"
                    Style="{StaticResource ButtonStyle}"
                    Click="Exit_Click"
                    Margin="0,0,0,15"/>
        </StackPanel>
    </Grid>
</Window>
